{
  "name": "@prospector-btc/source",
  "version": "0.1.0-alpha",
  "description": "Distributed Cryptographic Audit System targeting secp256k1 collisions using ephemeral cloud resources and probabilistic filtering.",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Raz PodestÃ¡",
    "email": "raz.podesta@metashark.tech"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/razpodesta/prospector-btc.git"
  },
  "bugs": {
    "url": "https://github.com/razpodesta/prospector-btc/issues"
  },
  "homepage": "https://github.com/razpodesta/prospector-btc#readme",
  "keywords": [
    "bitcoin",
    "secp256k1",
    "rust",
    "cryptography",
    "distributed-systems",
    "nx-monorepo",
    "nextjs",
    "audit"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "postinstall": "nx run-many --target=build --all",
    "start": "nx run-many --target=serve --projects=orchestrator,web-dashboard --parallel",
    "clean": "rimraf dist target .nx",
    "--- BUILD COMMANDS ---": "--------------------------------",
    "build:all": "nx run-many --target=build --all --prod",
    "build:backend": "nx build orchestrator --prod",
    "build:frontend": "nx build web-dashboard --prod",
    "build:miner": "nx build miner-worker --prod",
    "--- DOCKER OPS ---": "--------------------------------",
    "docker:build:orch": "docker build -f apps/orchestrator/Dockerfile -t prospector/orchestrator .",
    "docker:build:web": "docker build -f apps/web-dashboard/Dockerfile -t prospector/web-dashboard .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "--- TEST SUITE ---": "--------------------------------",
    "test:all": "nx run-many --target=test --all",
    "lint:all": "nx run-many --target=lint --all",
    "lint": "nx run-many --target=lint --all",
    "test": "nx run-many --target=test --all",
    "build:orch:docker": "docker build -f apps/orchestrator/Dockerfile -t prospector-orch .",
    "build:web:docker": "docker build -f apps/web-dashboard/Dockerfile -t prospector-web .",
    "check:rust": "cargo check",
    "format:rust": "cargo fmt"
  },
  "devDependencies": {
    "@monodon/rust": "^2.3.0",
    "@nx/eslint": "^22.1.3",
    "@nx/eslint-plugin": "^22.1.3",
