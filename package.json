    "@nx/js": "22.1.3",
    "@nx/next": "^22.1.3",
    "@nx/react": "^22.1.3",
    "@nx/workspace": "22.1.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "jest": "^30.2.0",
    "nx": "22.1.3",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  },
